        "!pip install gtts\n",
        "from gtts import gTTS\n",
        "import os\n",
        "\n",
        "def text_to_speech(text, lang='en'):\n",
        "    tts = gTTS(text=text, lang=lang, slow=False)\n",
        "\n",
        "    tts.save(\"output.mp3\")\n",
        "    os.system(\"start output.mp3\")\n",
        "\n",
        "text = input(\"Enter text to convert to speech: \")\n",
        "text_to_speech(text)"
      ]
